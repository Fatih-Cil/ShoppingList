@using ShoppingList.Application.ViewModels.UserViewModel;
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null;
}
@model AddUserViewModel

<div class="container ">


    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-md-6">
            <div>
                @{
                    if (TempData["Error"] is not null)
                    {

                        <div class="alert alert-danger" role="alert">
                            @TempData["Error"]
                        </div>
                    }
                    if (TempData["Message"] is not null)
                    {

                        <div class="alert alert-primary" role="alert">
                            @TempData["Message"]
                        </div>
                    }

                }
                <div class="card bg-black text-white">
                    <div class="card-body">
                        <form asp-controller="Login" asp-action="Register" method="post">
                            <div class="mb-3">
                                <label class="form-label">Ad</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <p class="text-danger"><span asp-validation-for="Name"></span></p>

                            <div class="mb-3">
                                <label class="form-label">Soyad</label>
                                <input type="text" class="form-control" asp-for="Surname">
                            </div>
                            <p class="text-danger"><span asp-validation-for="Surname"></span></p>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" asp-for="Email">
                            </div>
                            <p class="text-danger"><span asp-validation-for="Email"></span></p>

                            <div class="mb-3">
                                <label class="form-label">Şifre</label>
                                <input type="password" class="form-control" asp-for="Password">
                            </div>
                            <p class="text-danger"><span asp-validation-for="Password"></span></p>
                            <div class="mb-3">
                                <label class="form-label">Şifre Tekrar</label>
                                <input type="password" class="form-control" asp-for="PasswordRetry">
                            </div>
                            <p class="text-danger"><span asp-validation-for="PasswordRetry"></span></p>


                            <div class="row justify-content-center align-items-center">
                                <div class="col-sm-6 col-md-6 d-flex justify-content-start"><button type="submit" class="btn btn-primary">KAYDET</button></div>
                                <div class="col-6 col-md-6 d-flex justify-content-end">
                                    
                                </div>
                            </div>
                            <hr />
                            <div class="row justify-content-center align-items-center">
                                <div class="col-sm-6 col-md-6 d-flex justify-content-start"></div>
                                <div class="col-6 col-md-6 d-flex justify-content-end">
                                    <p>Zaten üye misiniz?  <a asp-action="Index" asp-controller="Login" class="link-warning link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Giriş Yap</a></p>
                                </div>
                            </div>
                        </form>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>