@using ShoppingList.Domain.Entities;
@using System.IdentityModel.Tokens.Jwt;
@using System.Security.Claims;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
@model List<Category>
@* @section UserName{
        Hoşgeldin @TempData["UserName"];
} *@
<h1>Kategori İşlemleri</h1><br />

<div class="container">
    <p><a class="btn btn-primary" asp-action="add" asp-controller="Categories" asp-area="AdminPanel" role="button">Kategori Ekle</a></p>
    <div class="card">
        @{
            if (TempData["Error"] is not null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }
        }
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col">İşlem</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <th scope="row">@category.Id</th>
                            <td>@category.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@category.Id" asp-controller="Categories" asp-area="AdminPanel" class="link-warning link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Düzenle</a>
                                |
                                <a asp-action="Delete" asp-route-id="@category.Id" asp-controller="Categories" asp-area="AdminPanel" class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Sil</a>
                            </td>

                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>



